# MongoDB示例配置
MONGODB_URL="mongodb://user:password@127.0.0.1:27017/testdb"

# JWT设置
JWT_SECRET=jwt-secret-key-base64-64bytes
JWT_EXPIRATION_TIME_MS=jwt-expiration-time-in-ms

# SMTP设置
SMTP_HOST="smtp.example.com"
SMTP_PORT="your smtp port"
SMTP_USER="user@your.smtp.com"
SMTP_PASS="your_smtp_password"
